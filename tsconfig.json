{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["esnext"],
        "types": ["node", "chai"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}